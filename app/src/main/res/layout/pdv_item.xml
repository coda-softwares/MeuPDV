<?xml version="1.0" encoding="utf-8"?><!--Esse arquivo de layout XML representa os items da lista do menu inicial!-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pdv_img"
        android:layout_width="96dp"
        android:layout_height="83dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_meupdv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/pdv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Opção"
            android:textAppearance="@style/textaum" />

        <TextView
            android:id="@+id/pdv_Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Descrição" />

    </LinearLayout>

</LinearLayout>